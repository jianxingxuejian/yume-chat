{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "declaration": true,
    "outDir": "./dist",
    "target": "ES2023",
    "incremental": true,
    "skipLibCheck": true
    // "noImplicitAny": false,
    // "strictBindCallApply": false,
    // "noFallthroughCasesInSwitch": false
  },
  "include": ["../common/types/**/*.d.ts", "src/**/*.d.ts", "src/**/*.ts"]
}
